<p style="color: green"><%= notice %></p>
<%= button_tag(:type => 'button') do %>
  <% link_to t('.New Post'), new_post_path %>
<% end %>
<%= button_tag(:type => 'button') do %>
  <% link_to t('.Top Post'), '/posts/topposts' %>
<% end %>
<h4>All Posts</h4>
<div>
<table>
<tr>
<th>ID</th>
<th>AUTHOR</th>
<th>TITLE</th>
<th>CONTENT</th>
<th>RATING</th>
<th>SHOW</th>
</tr>
  <% @posts.each do |post| %>
  <tr>
  <td><%= post.id%></td>
  <td><%= post.author%></td>
  <td><%= post.title%></td>
  <td>&nbsp;&nbsp;<%= post.content%></td>
  <td>&nbsp;&nbsp;&nbsp;&nbsp;<%= post.rate%></td>
  <td><%= button_tag(:type => 'button') do %><% link_to t('Show'), post %><% end %></td>
  </tr>
<% end %>
</table>
<br>
</div>

 
